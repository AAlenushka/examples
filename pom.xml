<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>JavaExamples</groupId>
    <artifactId>JavaExamples</artifactId>
    <version>1.0-SNAPSHOT</version>

    <properties>
        <selenium-java.version>2.41.0</selenium-java.version>
        <testng.suite>${basedir}/src/test/resources/testsuites/default_console_suite.xml</testng.suite>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.6</maven.compiler.source>
        <maven.compiler.target>1.6</maven.compiler.target>
    </properties>


    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.16</version>
                <configuration>
                    <suiteXmlFiles>
                        <suiteXmlFile>${testng.suite}</suiteXmlFile>
                    </suiteXmlFiles>
                    <junitArtifactName>none:none</junitArtifactName>
                    <!-- <properties>
                         <property>
                             <name>usedefaultlisteners</name>
                             <value>false</value>
                         </property>
                         <property>
                             <name>listener</name>
                             &lt;!&ndash; <value>org.uncommons.reportng.HTMLReporter</value> &ndash;&gt;
                             &lt;!&ndash; <value>org.uncommons.reportng.JUnitXMLReporter</value> &ndash;&gt;
                             <value>org.uncommons.reportng.HTMLReporter</value>
                         </property>
                     </properties>
                     <workingDirectory>target/</workingDirectory>-->
                </configuration>
            </plugin>


            <plugin>
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb2-plugin</artifactId>
                <version>0.8.3</version>
                <executions>
                    <execution>
                        <id>schema1-generate-auto</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <schemaDirectory>${basedir}/src/main/resources/xsds/auto</schemaDirectory>
                            <generatePackage>com.revimedia.testing.beans.auto</generatePackage>
                        </configuration>
                    </execution>

                    <execution>
                        <id>schema2-generate-health</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <schemaDirectory>${basedir}/src/main/resources/xsds/health</schemaDirectory>
                            <generatePackage>com.revimedia.testing.beans.health</generatePackage>
                        </configuration>
                    </execution>

                    <execution>
                        <id>schema3-generate-homesecurity</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <schemaDirectory>${basedir}/src/main/resources/xsds/homesecurity</schemaDirectory>
                            <generatePackage>com.revimedia.testing.beans.homesecurity</generatePackage>
                        </configuration>
                    </execution>
                </executions>
                <configuration>
                    <forceRegenerate>true</forceRegenerate>
                    <!--<verbose>true</verbose>-->
                    <!--<extension>true</extension>-->
                </configuration>
            </plugin>

            <plugin>
                <inherited>true</inherited>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>


        </plugins>
    </build>


