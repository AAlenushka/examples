<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite thread-count="1" name="Auto MFS" parallel="tests">

    <listeners>
        <listener class-name="org.uncommons.reportng.HTMLReporter"/>
        <listener class-name="org.uncommons.reportng.JUnitXMLReporter"/>
    </listeners>

    <test name="run on Chrome Browser, Latest Version">
        <parameter name="browser" value="chrome"/>
        <parameter name="version" value="7"/>
        <!--<parameter name="platform" value="MAC"/>-->
        <parameter name="url" value="http://development.stagingrevi.com/auto/mfs/"/>
        <classes>
            <class name="com.revimedia.tests.cds.auto.mfs.SubmitTests"/>
            <class name="com.revimedia.tests.cds.auto.mfs.DisclaimersTests"/>
            <class name="com.revimedia.tests.cds.auto.mfs.PrePopAndeBureauTests"/>
        </classes>
    </test>

    <test name="run on FireFox Browser, Latest Version">
        <parameter name="browser" value="firefox"/>
        <parameter name="version" value="7"/>
        <!--<parameter name="platform" value="MAC"/>-->
        <parameter name="url" value="http://development.stagingrevi.com/auto/mfs/"/>
        <classes>
            <class name="com.revimedia.tests.cds.auto.mfs.SubmitTests"/>
            <class name="com.revimedia.tests.cds.auto.mfs.DisclaimersTests"/>
            <class name="com.revimedia.tests.cds.auto.mfs.PrePopAndeBureauTests"/>
        </classes>
    </test>

</suite> <!-- Suite -->